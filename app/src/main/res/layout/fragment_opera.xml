<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_opera1"
            android:text="@string/descr_opera1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:lineSpacingMultiplier="1.5"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:text="@string/descr_opera2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:lineSpacingMultiplier="1.5"
            android:textSize="18sp"
            android:id="@+id/txt_opera2"
            android:layout_below="@+id/txt_opera1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="280dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/opera"
            android:id="@+id/image_opera"
            android:layout_marginTop="14dp"
            android:layout_alignTop="@+id/txt_opera1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/img_opera"
            android:id="@+id/image_opera2"
            android:layout_below="@id/txt_opera2"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            />

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>